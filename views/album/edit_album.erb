<p class="info-specs">Edit <b><%= @album.album_title %></b> album from <span style="color:#dd5252;"><%= @album.artist.name %></span> </p>

<form class="form" method="POST" action="/albums/<%= @album.id %>">



      <div class="form-el">
        <label for="album_title">Album Title: </label>
        <input type="text" name="album_title" id="album_title" required value="<%= @album.album_title %>"/>
      </div>

    <div class="form-el">
        <label for="year_of_issue">Year of issue: </label>
        <input type="number" name="year_of_issue" id="year_of_issue" required value="<%= @album.year_of_issue %>"/>
    </div>

    <div class="form-el">
        <label for="quantity">Quantity: </label>
        <input type="number" name="quantity" id="quantity" required value="<%= @album.quantity %>"/>
    </div>


    <div class="form-el">
        <label for="artist_id">Artist: </label>
        <select name="artist_id" id="artist_id" selected="<%= @album.artist_id%>">
          <% @artists.each do |artist| %>
            <% if artist.id == @album.artist_id %>
            <option value=<%= artist.id %> selected><%= artist.name %></option>
            <% else %>
              <option value=<%= artist.id %>><%= artist.name %></option>
              <% end %>
              <% end %>
        </select>

    </div>



    <div class="form-el">
        <input type="submit"  value="Update Album">
    </div>




</form>
