

<p>New Album</p>
    <form class="" action="/albums" method="POST">
      <div class="form-wrapper">

          <div class="form-el">
            <label for="artist">Artist name:</label>
            <select class="artist" name="artist_id">

              <% Artist.all().each do |artist| %>
              <option value=<%= artist.id %>><%= artist.name %></option>
              <% end %>

            </select>

          </div>

          <div class="form-el">
            <label for="album_title">Album title:</label>
            <input type="text" name="album_title" id="album_title">
          </div>

          <div class="form-el">
            <label for="year_of_issue">Year of issue:</label>
            <input type="number" name="year_of_issue" id="year_of_issue">
          </div>

          <div class="form-el">
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" id="quantity">
          </div>

          <div class="form-el">
              <input type="submit" value="Update Album"
          </div>





      </div>
    </form>
